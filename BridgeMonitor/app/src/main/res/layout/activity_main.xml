<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ‰ Severn Bridges"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: --:--:--"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="@color/text_secondary" />

            <!-- Modern Tab Switcher with Underline Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <!-- Current Status Tab -->
                <LinearLayout
                    android:id="@+id/presentPainButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/presentPainText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš¨ Current Status"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue" />

                    <View
                        android:id="@+id/presentPainIndicator"
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary_blue" />
                </LinearLayout>

                <!-- Future Works Tab -->
                <LinearLayout
                    android:id="@+id/futurePainButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/futurePainText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Future Works"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:id="@+id/futurePainIndicator"
                        android:layout_width="40dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary_blue"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider below tabs -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/divider" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Loading Message -->
            <LinearLayout
                android:id="@+id/loadingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ‰"
                    android:textSize="48sp"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading bridge status..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetching latest data from National Highways"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Error Text -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/status_closed_text"
                android:visibility="gone" />

            <!-- Present Pain Container (Current Status) -->
            <LinearLayout
                android:id="@+id/presentPainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- M48 Bridge Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Bridge Name -->
                        <TextView
                            android:id="@+id/m48Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="M48 Severn Bridge"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Original Bridge, 1966"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:paddingBottom="16dp" />

                        <!-- Directional Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Eastbound (Wales â†’ England) -->
                            <LinearLayout
                                android:id="@+id/m48EastboundContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginEnd="4dp"
                                android:background="@color/status_open">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â†’ Eastbound"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_secondary"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:id="@+id/m48EastboundStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â—"
                                    android:textSize="32sp"
                                    android:textColor="@color/status_open_icon" />

                                <TextView
                                    android:id="@+id/m48EastboundText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OPEN"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/status_open_text"
                                    android:paddingTop="4dp" />
                            </LinearLayout>

                            <!-- Westbound (England â†’ Wales) -->
                            <LinearLayout
                                android:id="@+id/m48WestboundContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginStart="4dp"
                                android:background="@color/status_open">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â† Westbound"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_secondary"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:id="@+id/m48WestboundStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â—"
                                    android:textSize="32sp"
                                    android:textColor="@color/status_open_icon" />

                                <TextView
                                    android:id="@+id/m48WestboundText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OPEN"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/status_open_text"
                                    android:paddingTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Overall Status Badge -->
                        <LinearLayout
                            android:id="@+id/m48OverallStatusContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/m48OverallStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš ï¸ Restrictions in effect"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:padding="8dp"
                                android:background="@color/status_restricted" />
                        </LinearLayout>

                        <!-- Closure Details -->
                        <TextView
                            android:id="@+id/m48Closures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp"
                            android:visibility="gone"
                            android:paddingTop="12dp" />

                        <!-- Countdown Timer -->
                        <LinearLayout
                            android:id="@+id/m48CountdownContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:paddingTop="12dp"
                            android:padding="12dp"
                            android:background="@color/status_restricted">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â±ï¸"
                                android:textSize="20sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/m48CountdownText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Closing in: 60:00"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/status_restricted_text" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- M4 Bridge Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Bridge Name -->
                        <TextView
                            android:id="@+id/m4Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="M4 Prince of Wales Bridge"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Second Severn Crossing, 1996"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:paddingBottom="16dp" />

                        <!-- Directional Status Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Eastbound (Wales â†’ England) -->
                            <LinearLayout
                                android:id="@+id/m4EastboundContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginEnd="4dp"
                                android:background="@color/status_open">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â†’ Eastbound"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_secondary"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:id="@+id/m4EastboundStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â—"
                                    android:textSize="32sp"
                                    android:textColor="@color/status_open_icon" />

                                <TextView
                                    android:id="@+id/m4EastboundText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OPEN"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/status_open_text"
                                    android:paddingTop="4dp" />
                            </LinearLayout>

                            <!-- Westbound (England â†’ Wales) -->
                            <LinearLayout
                                android:id="@+id/m4WestboundContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginStart="4dp"
                                android:background="@color/status_open">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â† Westbound"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_secondary"
                                    android:paddingBottom="8dp" />

                                <TextView
                                    android:id="@+id/m4WestboundStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â—"
                                    android:textSize="32sp"
                                    android:textColor="@color/status_open_icon" />

                                <TextView
                                    android:id="@+id/m4WestboundText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="OPEN"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/status_open_text"
                                    android:paddingTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Overall Status Badge -->
                        <LinearLayout
                            android:id="@+id/m4OverallStatusContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/m4OverallStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš ï¸ Restrictions in effect"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:padding="8dp"
                                android:background="@color/status_restricted" />
                        </LinearLayout>

                        <!-- Closure Details -->
                        <TextView
                            android:id="@+id/m4Closures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp"
                            android:visibility="gone"
                            android:paddingTop="12dp" />

                        <!-- Countdown Timer -->
                        <LinearLayout
                            android:id="@+id/m4CountdownContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:paddingTop="12dp"
                            android:padding="12dp"
                            android:background="@color/status_restricted">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â±ï¸"
                                android:textSize="20sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/m4CountdownText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Closing in: 60:00"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/status_restricted_text" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Refresh Button - Sleek and Compact -->
                <Button
                    android:id="@+id/refreshButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ”„ Refresh"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.Button.TextButton" />

                <!-- Info Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Auto-refreshes every 5 minutes â€¢ Pull down to refresh"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/text_hint"
                    android:gravity="center" />

            </LinearLayout>
            <!-- End Present Pain Container -->

            <!-- Future Pain Container (Planned Works) -->
            <LinearLayout
                android:id="@+id/futurePainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Upcoming Planned Works"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="16dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/futurePainEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ“ No planned closures scheduled"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone"
                    android:textColor="@color/status_open_text" />

                <LinearLayout
                    android:id="@+id/futurePainList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Link to National Highways -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="More detailed information about future works can be found at:"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:paddingBottom="12dp" />

                        <TextView
                            android:id="@+id/nationalHighwaysLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”— National Highways - Severn Bridges Travel Updates"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/link_blue"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- End Future Pain Container -->

            <!-- Version -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v0.1.0"
                android:textSize="10sp"
                android:paddingTop="8dp"
                android:textColor="@color/text_hint"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
