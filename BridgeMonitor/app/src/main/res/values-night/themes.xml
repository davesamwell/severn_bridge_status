<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode Theme -->\n    <style name="Base.Theme.BridgeMonitor" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorSecondaryVariant">@color/accent_teal_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/surface_background</item>
        <item name="android:navigationBarColor">@color/surface_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>

    <style name="Theme.BridgeMonitor" parent="Base.Theme.BridgeMonitor" />
